<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.przyklad.samochodgui.HelloController">

    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="Plik">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Zamknij" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edycja">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Ustawienia" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar prefHeight="40.0" prefWidth="200.0">
                    <items>
                        <ComboBox fx:id="carComboBox" prefWidth="200.0" promptText="Wybierz samochód" />
                        <Button fx:id="addNewButton" mnemonicParsing="false" text="Dodaj nowy" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" text="Usuń" />
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>

    <left>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefWidth="250.0" BorderPane.alignment="CENTER">
            <content>
                <VBox spacing="5.0">
                    <children>
                        <TitledPane animated="false" text="Samochód" collapsible="false">
                            <content>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Model" />
                                        <TextField fx:id="modelTextField" />
                                        <Label text="Nr rejestracyjny" />
                                        <TextField fx:id="registrationTextField" />
                                        <Label text="Waga" />
                                        <TextField fx:id="weightTextField" />
                                        <Label text="Prędkość / Pozycja" />
                                        <TextField fx:id="speedTextField" />
                                        <HBox spacing="5.0" alignment="CENTER">
                                            <children>
                                                <Button fx:id="startButton" mnemonicParsing="false" style="-fx-background-color: lightgreen;" text="Wł." />
                                                <Button fx:id="stopButton" mnemonicParsing="false" style="-fx-background-color: salmon;" text="HAMULEC" />
                                                <Button fx:id="genericCarButton" mnemonicParsing="false" style="-fx-background-color: lightblue;" text="JEDŹ" />
                                            </children>
                                            <VBox.margin>
                                                <Insets top="10.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>

                        <TitledPane animated="false" text="Skrzynia Biegów" collapsible="true">
                            <content>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Nazwa" />
                                        <TextField fx:id="gearboxNameTextField" />
                                        <Label text="Bieg" />
                                        <TextField fx:id="gearTextField" />
                                        <HBox spacing="10.0" alignment="CENTER">
                                            <children>
                                                <Button fx:id="gearUpButton" mnemonicParsing="false" text="Bieg +" />
                                                <Button fx:id="gearDownButton" mnemonicParsing="false" text="Bieg -" />
                                            </children>
                                            <VBox.margin>
                                                <Insets top="5.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>

                        <TitledPane animated="false" text="Silnik" collapsible="true">
                            <content>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Model" />
                                        <TextField fx:id="engineNameTextField" />
                                        <Label text="Obroty" />
                                        <TextField fx:id="rpmTextField" />
                                        <HBox spacing="10.0" alignment="CENTER">
                                            <children>
                                                <Button fx:id="throttleUpButton" mnemonicParsing="false" text="Gaz +" />
                                                <Button fx:id="throttleDownButton" mnemonicParsing="false" text="Gaz -" />
                                            </children>
                                            <VBox.margin>
                                                <Insets top="5.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>

                        <TitledPane animated="false" text="Sprzęgło" collapsible="true">
                            <content>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Nazwa" />
                                        <TextField fx:id="clutchNameTextField" />
                                        <Label text="Stan" />
                                        <TextField fx:id="clutchStateTextField" />
                                        <HBox spacing="10.0" alignment="CENTER">
                                            <children>
                                                <Button fx:id="clutchPressButton" mnemonicParsing="false" text="Wciśnij" />
                                                <Button fx:id="clutchReleaseButton" mnemonicParsing="false" text="Zwolnij" />
                                            </children>
                                            <VBox.margin>
                                                <Insets top="5.0" />
                                            </VBox.margin>
                                        </HBox>
                                    </children>
                                </VBox>
                            </content>
                        </TitledPane>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </left>

    <center>
        <AnchorPane fx:id="mapaPanel" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: lightgreen;" BorderPane.alignment="CENTER">
            <children>
                <Label layoutX="14.0" layoutY="14.0" text="Symulacja Jazdy" textFill="#404040">
                    <font>
                        <javafx.scene.text.Font name="System Bold" size="18.0" />
                    </font>
                </Label>

                <ImageView fx:id="carImageView" fitHeight="50.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true" />
            </children>
        </AnchorPane>
    </center>

</BorderPane>